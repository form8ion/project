{
  "name": "@form8ion/project",
  "description": "opinionated scaffolder for new projects",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "engines": {
    "node": "^18.17 || >=20.6.1"
  },
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "contributors": [
    "Trevor Richardson <npm@trevorrichardson.me> (https://trevorrichardson.me)"
  ],
  "repository": "form8ion/project",
  "bugs": "https://github.com/form8ion/project/issues",
  "homepage": "https://npm.im/@form8ion/project",
  "funding": {
    "url": "https://github.com/sponsors/travi"
  },
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "scripts": {
    "clean": "rimraf lib/",
    "lint:js": "eslint . --cache",
    "lint:gherkin": "gherkin-lint",
    "lint:md": "remark --quiet . --frail",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:engines": "ls-engines",
    "lint:peer": "npm ls >/dev/null",
    "lint:publish": "publint --strict",
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "test:unit:base": "DEBUG=any vitest run",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:integration:base": "NODE_OPTIONS=\"--loader=testdouble --enable-source-maps\" cucumber-js test/integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "pretest:integration:base": "run-s build",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "pregenerate:md": "run-s build",
    "generate:md": "remark . --output",
    "build:js": "rollup -c",
    "build": "run-s clean build:*",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "prepare": "husky install"
  },
  "files": [
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@form8ion/core": "^4.6.0",
    "@form8ion/execa-wrapper": "^1.0.0",
    "@form8ion/git": "^1.2.0",
    "@form8ion/overridable-prompts": "^1.1.0",
    "@form8ion/readme": "3.1.0",
    "@form8ion/results-reporter": "^1.1.0",
    "@hapi/hoek": "^11.0.2",
    "@travi/cli-messages": "1.1.1",
    "deepmerge": "^4.2.2",
    "filedirname": "^3.0.0",
    "hosted-git-info": "^8.0.0",
    "joi": "^17.1.1",
    "mustache": "4.2.0",
    "simple-git": "^3.16.0",
    "spdx-license-list": "6.9.0",
    "word-wrap": "^1.2.3",
    "write-yaml": "1.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "11.0.0",
    "@form8ion/commitlint-config": "1.0.76",
    "@form8ion/eslint-config": "7.0.10",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/remark-lint-preset": "6.0.4",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@travi/any": "3.1.2",
    "c8": "10.1.2",
    "chai": "5.1.1",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.4",
    "husky": "9.1.6",
    "jest-when": "3.6.0",
    "lockfile-lint": "4.14.0",
    "ls-engines": "0.9.3",
    "make-dir": "4.0.0",
    "mdast-util-from-markdown": "2.0.1",
    "mdast-util-heading-range": "4.0.0",
    "mdast-zone": "6.1.0",
    "mock-fs": "5.2.0",
    "npm-run-all2": "6.2.3",
    "publint": "0.2.10",
    "remark-cli": "12.0.1",
    "remark-toc": "9.0.0",
    "remark-usage": "11.0.1",
    "rimraf": "6.0.1",
    "rollup": "4.21.3",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "19.0.2",
    "testdouble": "3.20.2",
    "unist-util-find": "3.0.0",
    "vitest": "2.1.0"
  }
}
